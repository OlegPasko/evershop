<div class="container_12">
	<div class="grid_12">
		<h1 class="center">Каталог</h1>
		
		<ul class="products">
		<% @products.each do |product| %>
		    <li>
		    	<div class="product-image">
		          <%= link_to image_tag('testimage.jpeg'), product %>
		        </div>
		        <%= link_to product.title, product, class: "title" %>
		    	<p class="price"><%= number_to_currency(product.price, :unit => "грн.", :separator => ",", :delimiter => "", :format => "%n %u") %></p>
		    	<p class="shortdescr">Зеленый крупнолистовой чай с добавкой алоэ вера, кусочками барбариса, шиповника и лепестками роз</p>
		    	<%= button_to "Добавить в корзину", line_items_path(product_id: product) %>
		    </li>
		<% end %>
		</ul>
	</div>
</div>